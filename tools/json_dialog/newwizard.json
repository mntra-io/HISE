                  "Text": "Download Template",
                  "ID": "downloadHXI",
                  "CallOnNext": false,
                  "LabelPosition": "Above",
                  "Source": "https://docs.hise.audio/info.hxi",
                  "Target": "$rootDirectory/info.hxi",
                  "ExtraHeaders": "",
